{$HOST} {
  handle_path /api/* {
    reverse_proxy api:8080
  }

  handle /assets/* {
    reverse_proxy webapp:80
  }

  handle /privacy-policy {
    rewrite * /privacy-policy.html
    reverse_proxy webapp:80
  }

  handle {
    rewrite * /index.html
    reverse_proxy webapp:80
  }
}

{$REDISINSIGHT_HOST} {
  basicauth {
    admin {$REDISINSIGHT_PASSWORD}
  }

  handle {
    reverse_proxy redisinsight:8001
  }
}

